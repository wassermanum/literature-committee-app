# Literature Committee Application - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string for the backend
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/literature_committee_dev"

# Alternative individual database settings (if not using DATABASE_URL)
# DB_HOST="localhost"
# DB_PORT=5432
# DB_NAME="literature_committee_dev"
# DB_USER="postgres"
# DB_PASSWORD="postgres"

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# Server configuration
PORT=5000
NODE_ENV="development"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Redis for caching and sessions
REDIS_URL="redis://localhost:6379"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for email notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Set to "true" to disable email notifications during development
DISABLE_EMAIL_NOTIFICATIONS="true"

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL="info"

# =============================================================================
# PRISMA CONFIGURATION
# =============================================================================
# Prisma CLI settings (optional)
# PRISMA_CLI_QUERY_ENGINE_TYPE="binary"
# PRISMA_GENERATE_SKIP_AUTOINSTALL="true"

# =============================================================================
# FRONTEND CONFIGURATION (if needed)
# =============================================================================
# API base URL for frontend
# VITE_API_BASE_URL="http://localhost:5000/api"
# VITE_APP_TITLE="Literature Committee Management System"
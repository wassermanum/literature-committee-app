# Database - PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
# Development: postgresql://postgres:postgres@localhost:5432/literature_committee_dev
# Production: Use your production PostgreSQL credentials
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/literature_committee_dev"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server
PORT=5000
NODE_ENV="development"

# Email (для уведомлений)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Logging
LOG_LEVEL="info"


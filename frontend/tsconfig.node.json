{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist-node",
    /* Performance optimizations for config files */
    "incremental": true,
    "tsBuildInfoFile": "./dist-node/.tsbuildinfo-node"
  },
  "include": ["vite.config.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist", "src"]
}